<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ruby.Setup.Styles">
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Padding" Value="4,3,4,3"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border BorderThickness="1" CornerRadius="4">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="Black" Opacity="0.40"/>
                        </Border.BorderBrush>
                        <ScrollViewer Margin="0,3,0,3"
                        x:Name="PART_ContentHost" VerticalContentAlignment="Center" Opacity="0.6"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>