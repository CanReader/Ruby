<UserControl x:Class="Ruby.Cafe.Common.Controls.TableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ruby.Cafe.Common.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid x:Name="TableBody" Background="{Binding Path=TableColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TableNameText" Grid.Row="0" Text="{Binding Path=TableName}" TextWrapping="WrapWithOverflow" FontSize="25"   VerticalAlignment="Top" Margin="0,20,0,0"/>
        <TextBlock x:Name="StatueText" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="22" Text="{Binding Path=TableStatue}" TextWrapping="Wrap" Margin="0,0,0,20"></TextBlock>
    </Grid>
</UserControl>
